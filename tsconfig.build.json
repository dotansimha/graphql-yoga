{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "verbatimModuleSyntax": false
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/bundle",
    "**/scripts",
    "**/test/*.ts",
    "**/tests/*.ts",
    "*.spec.ts",
    "*.test.ts",
    "*.loadtest.ts",
    "**/examples/**/*",
    "**/e2e/**/*"
  ]
}

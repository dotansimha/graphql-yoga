{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>the-guild-org/shared-config:renovate",
    ":preserveSemverRanges"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "envelop",
      "matchPackageNames": [
        "/@envelop/*/"
      ]
    },
    {
      "groupName": "whatwg-node",
      "matchPackageNames": [
        "/@whatwg-node/*/"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "!/@changesets/*/",
        "!/typescript/",
        "!/typedoc*/",
        "!/^@theguild//",
        "!/@graphql-inspector/core/",
        "!/next/",
        "!/@envelop/*/",
        "!/@whatwg-node/*/",
        "!/@graphql-yoga/*/",
        "!/graphql-yoga/",
        "!/lru-cache/",
        "!/sofa-api/",
        "!/husky/",
        "*"
      ]
    }
  ],
  "ignoreDeps": [
    "@sveltejs/kit",
    "graphiql",
    "graphql-yoga"
  ],
  "ignorePaths": [
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ],
  "baseBranches": [
    "main"
  ]
}

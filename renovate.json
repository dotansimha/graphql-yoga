{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>the-guild-org/shared-config:renovate",
    ":preserveSemverRanges"
  ],
  "packageRules": [
    {
      "groupName": "envelop",
      "matchPackagePrefixes": "@envelop"
    }
  ],
  "ignoreDeps": [
    "@types/react",
    "@sveltejs/kit"
  ],
  "ignorePaths": [
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**",
    "examples/defer-stream/**"
  ]
}

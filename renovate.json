{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>the-guild-org/shared-config:renovate", ":preserveSemverRanges"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "envelop",
      "matchPackagePatterns": ["@envelop/*"]
    },
    {
      "groupName": "whatwg-node",
      "matchPackagePatterns": ["@whatwg-node/*"]
    },
    {
      "excludePackagePatterns": [
        "@changesets/*",
        "typescript",
        "typedoc*",
        "^@theguild/",
        "@graphql-inspector/core",
        "next",
        "@envelop/*",
        "@whatwg-node/*",
        "@graphql-yoga/*",
        "graphql-yoga",
        "lru-cache",
        "sofa-api",
        "husky"
      ],
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    }
  ],
  "ignoreDeps": ["@sveltejs/kit", "graphiql", "graphql-yoga"],
  "ignorePaths": ["**/__tests__/**", "**/test/**", "**/tests/**", "**/__fixtures__/**"],
  "baseBranches": ["main"]
}

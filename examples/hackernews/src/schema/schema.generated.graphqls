type Comment {
  body: String!
  id: ID!
  link: Link
}

type Link {
  comments: [Comment!]!
  description: String!
  id: ID!
  url: String!
}

type Mutation {
  postCommentOnLink(body: String!, linkId: ID!): Comment!
  postLink(description: String!, url: String!): Link!
}

type Query {
  comment(id: ID!): Comment
  feed(filterNeedle: String, skip: Int, take: Int): [Link!]!
  info: String!
  link(id: ID!): Link
}
{
  "private": true,
  "name": "example-apollo-federation-compatibility",
  "version": "1.0.0",
  "description": "Apollo Federation implemented with GraphQL Yoga",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "graphql-codegen",
    "build": "node scripts/bundle.js",
    "start": "node ./dist/index.js",
    "check": "tsc --pretty --noEmit",
    "test": "fedtest docker --compose ./docker-compose.yaml --schema ./schema.graphql --path /graphql --port 4001 --debug --format markdown"
  },
  "author": "Charly POLY",
  "license": "ISC",
  "dependencies": {
    "@apollo/subgraph": "2.3.2",
    "@graphql-yoga/plugin-apollo-inline-trace": "1.6.2",
    "graphql": "16.6.0",
    "graphql-tag": "2.12.6",
    "graphql-yoga": "3.6.1"
  },
  "devDependencies": {
    "@apollo/federation-subgraph-compatibility": "1.1.0",
    "@graphql-codegen/cli": "3.0.0",
    "@graphql-codegen/typescript": "3.0.0",
    "@graphql-codegen/typescript-resolvers": "3.0.0",
    "esbuild": "0.17.8",
    "@types/node": "18.13.0"
  }
}
